<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>Ejercicio 3 - funciones</title>
	<script type="text/javascript">

		var pal = prompt("Introduce la palabra");

		function palindrome(palabra){
			var car = palabra.length;
			
			var palindromo="";

			for(var i=car-1; i>=0; i--){
				palindromo += palabra.charAt(i);
			}


			if(palindromo==palabra){
				alert("Es palíndromo");	
			}else{
				alert("No es palíndromo");	
			}
		}

		palindrome(pal);
		
	</script>
</head>
